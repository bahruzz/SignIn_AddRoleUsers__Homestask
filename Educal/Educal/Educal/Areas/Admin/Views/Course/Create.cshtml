@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
}

<main id="main" class="main">
    <div class="container mt-5">
        <form class="crt" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="inputText">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
           
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input asp-for="Price" type="number" class="form-control" step="any" min="0" id="inputText">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">

                    <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>

                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Images</label>
                <div class="col-sm-10">
                    <input asp-for="Images" class="form-control" id="inputText">
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary" asp-action="Index">Close</a>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</main>
