    <section id="cards">
        <div class="container">
            <div class="row">
                <h1>Find The Right</h1>
                <h1>Online <span class="underline">Course</span> For You</h1>

                <p>You don't have to struggle alone, you've got our assistance and help.</p>
            </div>

            <nav class="nav">8
                <button data-name="all" class="nav-link active" href="#">See All</button>
                <button data-name="popularity" class="nav-link" href="#">Popularity</button>
                <button data-name="trending" class="nav-link" href="#">Trending</button>
                <button data-name="featured" class="nav-link">Featured</button>
                <button data-name="art" class="nav-link"> Art & Design</button>
            </nav>

            <div class="cards mt-5">
               @foreach (var item in Model.Courses)
                {
                    <div class="exam" data-name="art">
                        <!-- <a href="#"></a> -->
                        <div class="exam-photo">
                            <a asp-controller="Course" asp-action="Index" asp-route-id="@item.Id">
                                <img src="~/assets/images//@item.CourseImages.FirstOrDefault(m=>m.IsMain)?.Name" alt="">
                            </a>
                            
                            <div class="job">
                                <a href="#">@item.Category.Name</a>
                            </div>
                        </div>

                        <div class="exam-text">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex align-items-center">
                                    <i class="fa-solid fa-book mx-1"></i>
                                    <span>43 Lesson</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fa-solid fa-star"></i>
                                    <span>4.5 (44)</span>
                                </div>

                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <a class="card-title"> @item.Name</a>
                            </div>
                            <div class="d-flex  align-items-center">
                                <div class="teachers-photo mx-2">
                                    <img src="~/assets/images/teacher-1.jpg" alt="">
                                </div>
                                <span>Jim Séchen</span>
                            </div>
                        </div>
                        <div class="price mt-2 d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <span class="prc">$@item.Price.ToString(@item.Price % 1 == 0 ? "0" : "0.00")</span>
                                <span><del>$33.00</del></span>
                            </div>
                            <div class="detail">
                                <span>Know Details</span>
                                <i class="fa-solid fa-arrow-right"></i>
                            </div>

                        </div>
                    </div>

                }
               
            </div>
        </div>
